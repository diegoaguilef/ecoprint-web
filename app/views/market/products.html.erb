<div id="sections">
  <section class="section--header">
    <div class="section__banner">
      <div class="section__bg">
        <div class="bg"></div>
      </div>
      <div class="section__grad"></div>
      <div class="section__wrap section__wrap--category">
        <div class="section__content">
          <div class="section__body">
            <h1 class="h2 section__title">Los resultados de tu búsqueda</h1>
            <p class="section__description">
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="section--panel">
    <div class="section__wrap">
      <div class="section__body">
        <div class="cols">
          <%= render 'filter' %>
          <div class="col-md-9">
            <div class="section__products">
              <div class="cols">
                <% @products.each do |product| %>
                  <div class="col-xs-6 col-md-4">
                    <article class="article--product">
                      <div class="article__img"> <%= image_tag(product.image) if product.image.attached? %></div>
                      <div class="article__body">
                        <h4 class="article__title"><%= product.name.upcase.capitalize %> </h4>
                        <%= link_to 'Ver más<span class="fa fa-angle-right"></span>'.html_safe, market_product_detail_path(id: product), class: "btn btn--sm" %>
                      </div>
                    </article>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
