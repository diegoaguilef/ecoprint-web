<div class="my-3 my-md-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">Usuarios</h3>
            <div>
              <%= link_to new_user_path, class: 'btn btn-outline-info' do %>
                <i class="fe fe-plus"></i>
                Nuevo usuario
              <% end %>
              <%= link_to users_path(format: :xlsx), class: 'btn btn-outline-success' do %>
                <i class="fe fe-download"></i>
                Descargar
              <% end %>
            </div
            >
          </div>
          <div class="card-body">
            <%= react_component("users/Index", {
              users: @users.as_json(methods: :role_name),
              pagination: @pagy
            }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>