<section class="section--header">
  <div class="section__banner">
    <div class="section__bg">
      <div class="bg"></div>
    </div>
    <div class="section__grad"></div>
    <div class="section__wrap">
      <div class="section__content">
        <div class="section__body">
          <h1 class="h2 section__title">Registro en Ecoprint</h1>
          <p class="section__description">Cursus himenaeos pretium molestie nisi vehicula euismod aptent lacus quis. Fusce tincidunt gravida consequat class lacinia facilisis ultrices torquent in nisi in elementum morbi porttitor.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="section--register">
  <div class="section__wrap">

    <div class="section__body">
      <div class="section__form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="form__element">
            <div class="form__input">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
            </div>
          </div>
          <div class="form__element">
            <div class="form__input">
               <% if @minimum_password_length %>
                <em><%= t('devise.shared.minimum_password_length', count:@minimum_password_length)  %> </em> <%# Aqui añadir traducción de device %>
              <% end %><br /> 
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña"%>
            </div>
          </div>
          <div class="form__element" style="margin-bottom: 25px;">
            <div class="form__input">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmación de contraseña" %>
            </div>
          </div>
          <div class="form__buttons">
            <button type="submit" class="btn">Registrarse</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
